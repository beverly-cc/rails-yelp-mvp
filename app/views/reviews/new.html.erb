<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, input_html: { min: '0', max: '5'} %>
  <%= f.submit "Add review", class: "btn btn-primary" %>
<% end %>
<br><br><br>
<h3><%= link_to "Back to restaurant listings", restaurants_path, class: "btn btn-primary" %></h3>
