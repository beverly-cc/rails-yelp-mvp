<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.category.capitalize %></p>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<br><br><br>
<div>
  <% @restaurant.reviews.each do |review| %>
    <p>Rating: <%= review.rating %></p>
    <p>Review: <%= review.content %></p>
  <% end %>
</div>

<h3><%= link_to "Add a new review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %></h3>
<br><br><br>
<h3><%= link_to "Back to restaurant listings", restaurants_path, class: "btn btn-primary" %></h3>
