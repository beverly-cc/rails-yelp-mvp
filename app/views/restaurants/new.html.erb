<%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <%= f.submit "Add restaurant", class: "btn btn-primary" %>
<% end %>
<br><br><br>
<h3><%= link_to "Back to restaurant listings", restaurants_path, class: "btn btn-primary" %></h3>
